<h1>게시글 등록</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form action="/save/notice" method="post" name="article">
            <div class="form-group">
                <label for="title">제목</label>
                <input name="title" type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
            </div>
            <div class="form-group">
                <label for="content"> 내용</label>
                <textarea name="content" class="form-control" id="content" placeholder="내용을 입력하세요"></textarea>
            </div>
            {{!<a href="/" role="button" class="btn btn-secondary">취소</a>}}
            <input type="submit" class="btn btn-primary" id="btn-save" value="등록">
        </form>
    </div>
</div>
